@model glamping_addventure3.Models.Mueble

@{
    ViewData["Title"] = "Detalles del Mueble";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles del Mueble</h1>

<div class="details-container">
    <dl class="details-list">
        <dt>Nombre:</dt>
        <dd>@Html.DisplayFor(model => model.NombreMueble)</dd>

        <dt>Imagen:</dt>
        <dd>
            @if (ViewData["ImageDataURL"] != null)
            {
                <img src="@ViewData["ImageDataURL"]" alt="Imagen del Mueble" class="details-image" />
            }
            else
            {
                <span>No hay imagen disponible</span>
            }
        </dd>

        <dt>Cantidad Disponible:</dt>
        <dd>@Html.DisplayFor(model => model.CantidadDisponible)</dd>

        <dt>Valor:</dt>
        <dd>@Html.DisplayFor(model => model.Valor)</dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>

<div class="actions">
    <a asp-action="Edit" asp-route-id="@Model?.Idmueble" class="btn-primary">Editar</a>
    <a asp-action="Index" class="btn-secondary">Volver</a>
</div>
<style>
    .details-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .details-list {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px;
    }

        .details-list dt {
            font-weight: bold;
            color: #555;
        }

        .details-list dd {
            margin: 0;
            color: #333;
        }

    .details-image {
        max-width: 300px;
        max-height: 300px;
        border-radius: 5px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
    }

    .actions {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .btn-primary, .btn-secondary {
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>