@model glamping_addventure3.Models.Habitacion
@{
    ViewData["Title"] = "Detalles de la Habitación";



    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="details-container">
    <dl class="details-list">
        <dt>Nombre:</dt>
        <dd>@Html.DisplayFor(model => model.NombreHabitacion)</dd>

        <dt>Imagen:</dt>
        <dd>
            @if (ViewData["ImageDataURL"] != null)
            {
                <img src="@ViewData["ImageDataURL"]" alt="Imagen de la Habitación" class="details-image" />
            }
            else
            {
                <span>No hay imagen disponible</span>
            }
        </dd>

        <dt>Descripción:</dt>
        <dd>@Html.DisplayFor(model => model.Descripcion)</dd>

        <dt>Costo:</dt>
        <dd>@Html.DisplayFor(model => model.Costo)</dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>Tipo de Habitación:</dt>
        <dd>@Html.DisplayFor(model => model.IdtipodeHabitacionNavigation.IdtipodeHabitacion)</dd>
    </dl>

    <h4>Muebles en la Habitación</h4>
    @if (ViewData["MueblesAgrupados"] != null && (ViewData["MueblesAgrupados"] as IEnumerable<dynamic>).Any())

    {
        <ul class="furniture-list">
            @foreach (var mueble in ViewData["MueblesAgrupados"] as IEnumerable<dynamic>)

            {
                <li>@mueble.NombreMueble (<strong>@mueble.Cantidad</strong>)</li>
            }
        </ul>
    }

    else

    {
        <p class="no-furniture">No hay muebles asignados a esta habitación.</p>
    }
    <div class="form-group">
        <button type="submit" class="btn">Editar</button>
        <a asp-action="Index" class="btn-secondary">Volver</a>
    </div>
</div>



<style>
    h1 {
        text-align: center
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        overflow-y: hidden;
    }

    .details-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        text-align: center; /* Centra el contenido */
    }

    .details-list {
        display: grid;
        grid-template-columns: 1fr; /* Cambia a una sola columna */
        gap: 10px;
        justify-items: center; /* Centra los elementos en el contenedor */
    }

        .details-list dt {
            font-weight: bold;
            color: #555;
            text-align: center; /* Centra el texto */
        }

        .details-list dd {
            margin: 0;
            color: #333;
            text-align: center; /* Centra el texto */
        }

    .details-image {
        max-width: 500px; /* Aumenta el tamaño máximo */
        max-height: 500px;
        width: auto; /* Mantiene la proporción */
        height: auto;
        border-radius: 5px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
        margin: 10px auto; /* Centra la imagen verticalmente dentro del contenedor */
    }

    .furniture-list {
        list-style: none;
        padding: 0;
        margin-top: 10px;
        text-align: center; /* Centra la lista */
    }

        .furniture-list li {
            padding: 5px 0;
            border-bottom: 1px solid #ddd;
            color: #333;
        }

            .furniture-list li strong {
                color: #007bff;
            }

    .no-furniture {
        color: #666;
        font-style: italic;
        margin-top: 10px;
    }

    .actions {
        margin-top: 20px;
        display: flex;
        justify-content: center; /* Centra los botones */
        gap: 10px;
    }

    .btn {
        background-color: #66bb6a;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
    }

        .btn:hover {
            background-color: #57a157;
        }

    .btn-secondary {
        background-color: #ccc;
        color: #333;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none; /* Elimina el subrayado */
        display: inline-block; /* Asegura que se comporte como un botón */
        text-align: center;
    }

        .btn-secondary:hover {
            background-color: #bbb;
        }
</style></div>
