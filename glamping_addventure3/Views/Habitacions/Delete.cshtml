@model glamping_addventure3.Models.Habitacion

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Estas seguro de borrar esta habitacion?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreHabitacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreHabitacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagenHabitacion)
        </dt>
        <dd class="col-sm-10">
            @if (ViewData["ImageDataURL"] != null)
            {
                <img src="@ViewData["ImageDataURL"]" alt="Imagen de la Habitación" style="max-width: 300px; max-height: 300px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Costo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Costo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdtipodeHabitacionNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdtipodeHabitacionNavigation.IdtipodeHabitacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Idhabitacion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn-secondary">Volver</a>
    </form>
</div>
<style>
    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #a8e6cf 0%, #dcedc1 100%);
    }

    .delete-box {
        background: rgba(255, 255, 255, 0.9);
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 1200px;
        text-align: center;
    }

    h1 {
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    h3 {
        font-size: 18px;
        margin-bottom: 20px;
        color: #555;
    }

    dl.row {
        margin-bottom: 20px;
        text-align: left;
    }

    .btn-danger {
        background-color: #d9534f;
        color: #fff;
        border: none;
        transition: background 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-secondary {
        background-color: #ccc;
        color: #333;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .btn-secondary:hover {
            background-color: #bbb;
        }
</style>