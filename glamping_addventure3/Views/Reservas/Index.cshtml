@model IEnumerable<glamping_addventure3.Models.Reserva>

@{
    ViewData["Title"] = "Lista de Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-create">
            <i class="fas fa-plus"></i> Crear
        </a>
    </div>




    <table id="myTable" class="display" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>
                DocumentoCliente
            </th>
            <th>
                FechaReserva
            </th>

            <th>
                MontoTotal
            </th>


            <th>
                Estado
            </th>
            <th>
                MetodoPago
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NroDocumentoClienteNavigation.NroDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReserva)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEstadoReservaNavigation.NombreEstadoReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetodoPagoNavigation.NomMetodoPago)
                    <td>
                            @if (item.IdEstadoReservaNavigation != null && item.IdEstadoReservaNavigation.IdEstadoReserva == 6)



                            {
                            <button class="btn btn-icon" style="background-color: #ccc;" disabled>
                                <i class="fa-solid fa-wallet"></i>
                            </button>
                            <!-- Botón de Editar -->
                            <button class="btn btn-icon" style="background-color: #ccc;" disabled>
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <a asp-action="Details" asp-route-id="@item.IdEstadoReserva" class="btn btn-info btn-sm">
                                <i class="fa-solid fa-eye"></i>

                            </a>
                            

                            <!-- Botón de Anular -->
                            <button class="btn btn-icon" style="background-color: #ccc;" disabled>
                                <i class="fa-solid fa-ban"></i>
                            </button>
                            }



                            else



                            {
                        

                            <a asp-controller="Abonoes" asp-action="Index" asp-route-idReserva="@item.IdReserva" class="btn btn-primary"><i class="fa-solid fa-wallet"></i></a>


                            <a asp-action="Edit" asp-route-id="@item.IdReserva" class="btn btn-success btn-sm"><i class="fa-solid fa-pencil"></i></a>

                            <a asp-action="Details" asp-route-id="@item.IdReserva" asp-controller="Reservas" class="btn btn-info btn-sm">
                                <i class="fa-solid fa-eye"></i>

                            </a>

                            <form asp-action="Anular" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.IdReserva" />
                                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-ban"></i></button>
                            </form>


                       
                            }
                    </td>
                   
            </tr>
        }
    </tbody>
</table>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true,          // Habilita paginación
                "searching": true,       // Habilita la barra de búsqueda
                "ordering": true,        // Habilita el ordenamiento de columnas
                "pageLength": 5,         // Muestra 5 registros por página
            });
        });
    </script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #a5dfa4 0%, #d5ffd2 100%);
            color: #1a4a5a;
        }

        .container {
            max-width: 1300px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-top: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #f8f9fa;
        }

        th {
            background-color: #1f2937;
            color: #ffffff;
            font-weight: bold;
            padding: 12px;
            text-align: center;
        }

        td {
            background-color: #ffffff;
            padding: 12px;
            text-align: center;
            border: 1px solid #e3e3e3;
        }

        tbody tr:nth-child(odd) td {
            background-color: #e9f7ec;
        }

        tbody tr:hover td {
            background-color: #c8e6c9;
        }

        .btn-create {
            font-weight: bold;
            color: #ffffff;
            border-radius: 5px;
            padding: 10px 20px;
            background-color: #38b2ac;
            font-size: 16px;
            text-decoration: none;
        }

            .btn-create:hover {
                background-color: #319795;
                opacity: 0.85;
            }

        .btn-edit {
            font-weight: bold;
            color: #ffffff;
            background-color: #4CAF50;
            padding: 5px 10px;
            border-radius: 5px;
        }

            .btn-edit:hover {
                background-color: #45a049;
            }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
        /* Separación entre el buscador de DataTables y la tabla */
        .dataTables_filter {
            margin-bottom: 20px; /* Espacio entre la barra de búsqueda y la tabla */
        }
    </style>
