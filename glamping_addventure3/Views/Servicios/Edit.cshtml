@model glamping_addventure3.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4" style="max-width: 1000px;">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Idservicio" />

        <!-- Campos del formulario -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NombreServicio" class="form-label">Nombre del Servicio</label>
                <input asp-for="NombreServicio" class="form-control form-control-sm" placeholder="Ingrese el nombre del servicio" />
                <span asp-validation-for="NombreServicio" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Duracion" class="form-label">Duración</label>
                <input asp-for="Duracion" class="form-control form-control-sm" placeholder="Duración en horas" />
                <span asp-validation-for="Duracion" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="CantidadMaximaPersonas" class="form-label">Cantidad Máxima de Personas</label>
                <input asp-for="CantidadMaximaPersonas" class="form-control form-control-sm" placeholder="Máximo de personas" />
                <span asp-validation-for="CantidadMaximaPersonas" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Costo" class="form-label">Costo</label>
                <input asp-for="Costo" class="form-control form-control-sm" placeholder="Costo del servicio" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control form-control-sm" rows="3" placeholder="Describa el servicio"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>



        <!-- Botones -->
        <div class="d-flex justify-content-center mt-3 gap-2">
            <button class="btn btn-primary" type="submit" style="background: #38b2ac; border: none; color: #fff; font-weight: bold;">Editar</button>
            <a asp-action="Index" class="btn btn-secondary" style="background: #4b5563; border: none; color: #fff; font-weight: bold;">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
